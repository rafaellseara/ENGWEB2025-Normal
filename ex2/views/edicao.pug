extends layout

block content
  .w3-container
    h1.w3-center.w3-padding-16 Edição #{ed._id}
    p
      | Ano: #{ed.anoEdicao} |
      | Organizador: 
      a.w3-text-blue(href=`/paises/${ed.organizacao}`)= ed.organizacao
      |  | Vencedor: 
      a.w3-text-blue(href=`/paises/${ed.vencedor}`)= ed.vencedor
    h2.w3-padding-8 Músicas
    table.w3-table-all.w3-hoverable
      thead
        tr.w3-teal
          th Título
          th Intérprete
          th País
      tbody
        each m in ed.musicas
          tr
            td= m.título
            td= m.intérprete
            td= m.país
    p
      a.w3-button.w3-blue(href='/') Voltar à principal
